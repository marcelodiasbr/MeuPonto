@page
@model MeuPonto.Modules.Pontos.Comprovantes.ExcluirComprovanteModel

@{
    ViewData["Title"] = "Excluir Comprovante de Ponto";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house"></i></a></li>
        <li class="breadcrumb-item"><a asp-page="/Pontos/Index">Pontos</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Comprovantes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Excluir</li>
    </ol>
</nav>

<h1>@ViewData["Title"] <span class="badge bg-secondary">@Html.DisplayFor(model => model.Comprovante.TipoImagemId)</span></h1>

<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="me-1">
                <div class="btn-group">
                    <a class="btn btn-primary" asp-page="./Criar">
                        <i class="bi bi-plus-circle"></i>
                        Criar Novo
                    </a>
                    <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false" data-bs-reference="parent">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" asp-page="./Guardar">
                                <i class="bi bi-qr-code"></i>
                                Guardar Comprovante
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="./Detalhar" asp-route-id="@Model.Comprovante?.Id">
                    <i class="bi bi-card-text"></i>
                    <span class="d-none d-sm-inline">Detalhar</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="./Editar" asp-route-id="@Model.Comprovante?.Id">
                    <i class="bi bi-pencil"></i>
                    <span class="d-none d-sm-inline">Editar</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger active" aria-current="page">
                    <i class="bi bi-trash"></i>
                    Excluir
                </a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="alert alert-danger" role="alert">
            Tem certeza que deseja excluir isso?
        </div>
        <div class="card mb-3">
            <div class="card-header">
                @Html.DisplayNameFor(model => model.Comprovante.Ponto)
            </div>
            <div class="row g-0">
                <div class="col-sm-3">
                    @*<svg class="bd-placeholder-img img-fluid rounded-start" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <title>Placeholder</title>
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Apuração Mensal</text>
                    </svg>*@
                </div>
                <div class="col-sm-9">
                    <div class="card-body">
                        <dl class="row g-3 ponto">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Comprovante.Ponto.Perfil)
                            </dt>
                            <dd class="col-sm-9">
                                <a class="text-decoration-none" asp-page="/Perfis/Detalhar" asp-route-id="@Model.Comprovante.Ponto.PerfilId" title="Detalhar Perfil" target="_blank">
                                    @Html.DisplayFor(model => model.Comprovante.Ponto.Perfil.Nome)
                                    <i class="bi bi-link-45deg"></i>
                                </a>
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Comprovante.Ponto.DataHora)
                            </dt>
                            <dd class="col-sm-9">
                                <a class="text-decoration-none" asp-page="/Pontos/Detalhar" asp-route-id="@Model.Comprovante.PontoId" title="Detalhar Ponto" target="_blank">
                                    @Html.DisplayFor(model => model.Comprovante.Ponto.DataHora)
                                    <i class="bi bi-link-45deg"></i>
                                </a>
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Comprovante.Ponto.MomentoId)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Comprovante.Ponto.MomentoId)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Comprovante.Ponto.PausaId)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Comprovante.Ponto.PausaId)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <dl class="row g-3">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Comprovante.Imagem)
            </dt>
            <dd class="col-sm-9">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Comprovante.Imagem)" width="100%" />
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Comprovante.TipoImagemId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Comprovante.TipoImagemId)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Comprovante.Numero)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Comprovante.Numero)
            </dd>
        </dl>
        <div class="accordion mb-3" id="accordionDetalhes">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDetalhesTecnicos" aria-expanded="false" aria-controls="collapseDetalhesTecnicos">
                        Detalhes Técnicos
                    </button>
                </h2>
                <div id="collapseDetalhesTecnicos" class="accordion-collapse collapse" data-bs-parent="#accordionDetalhes">
                    <div class="accordion-body">
                        <dl class="row g-3">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Comprovante.Id)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Comprovante.Id)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Comprovante.PartitionKey)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Comprovante.PartitionKey)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Comprovante.CreationDate)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Comprovante.CreationDate)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Comprovante.Version)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Comprovante.Version)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Comprovante.Id" />
            <button type="submit" value="Excluir" class="btn btn-danger">
                <i class="bi bi-trash"></i>
                Excluir
            </button>
        </form>
    </div>
</div>