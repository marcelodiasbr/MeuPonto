<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MeuPonto.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MeuPonto"
    xmlns:perfis="clr-namespace:MeuPonto.Modules.Perfis">

    <FlyoutItem Title="Home" Icon="house.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Perfis">
        <ShellContent ContentTemplate="{DataTemplate perfis:CadastroPerfisPage}" Route="Perfis" />
    </FlyoutItem>

</Shell>
