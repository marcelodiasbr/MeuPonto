<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MeuPonto.Modules.Empregadores.EmpregadorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Empregador">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding SalvarCommand}"
            IconImageSource="save.png"
            Order="Primary"
            Priority="0"
            Text="Salvar" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label Text="Nome" />
        <Entry Placeholder="Enter text" Text="{Binding Empregador.Nome}" />
    </StackLayout>
</ContentPage>