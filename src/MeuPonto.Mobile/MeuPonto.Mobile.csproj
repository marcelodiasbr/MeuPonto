	  <None Remove="Resources\AppIcon\home.svg" />
	  <None Remove="Resources\AppIcon\people.svg" />
	  <None Remove="Resources\AppIcon\person_circle.svg" />
	  <None Remove="Resources\AppIcon\plus_circle.svg" />
	  <None Remove="Resources\AppIcon\save.svg" />
