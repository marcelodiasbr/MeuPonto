	  <None Remove="Resources\AppIcon\stopwatch.svg" />
	  <None Remove="Resources\AppIcon\timer.svg" />
	  <None Remove="Resources\Images\house.svg" />
	</ItemGroup>

	<ItemGroup>
	  <MauiImage Include="Resources\AppIcon\account_circle.svg" />
	  <MauiImage Include="Resources\AppIcon\add_circle.svg" />
	  <MauiImage Include="Resources\AppIcon\apartment.svg" />
