@page
@model MeuPonto.Modules.Perfis.ExcluirModel

@{
    ViewData["Title"] = "Excluir Perfil";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house"></i></a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Perfis</a></li>
        <li class="breadcrumb-item active" aria-current="page">Excluir</li>
    </ol>
</nav>

<h1>@ViewData["Title"] <span class="badge bg-secondary">@Html.DisplayFor(model => model.Perfil.Nome)</span></h1>

<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="me-1">
                <a class="btn btn-primary" asp-page="./Criar">
                    <i class="bi bi-plus-circle"></i>
                    Criar Novo
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="./Detalhar" asp-route-id="@Model.Perfil?.Id">
                    <i class="bi bi-card-text"></i>
                    <span class="d-none d-sm-inline">Detalhar</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="./Editar" asp-route-id="@Model.Perfil?.Id">
                    <i class="bi bi-pencil"></i>
                    <span class="d-none d-sm-inline">Editar</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger active" aria-current="page">
                    <i class="bi bi-trash"></i>
                    Excluir
                </a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="alert alert-danger" role="alert">
            Tem certeza que deseja excluir isso?
        </div>
        <dl class="row g-3 perfil">
            <dt class="col-sm-3 nome">
                @Html.DisplayNameFor(model => model.Perfil.Nome)
            </dt>
            <dd class="col-sm-9 nome">
                @Html.DisplayFor(model => model.Perfil.Nome)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Perfil.Ativo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Perfil.Ativo)
            </dd>
            <dt class="col-sm-3 matricula">
                @Html.DisplayNameFor(model => model.Perfil.Matricula)
            </dt>
            <dd class="col-sm-9 matricula">
                @Html.DisplayFor(model => model.Perfil.Matricula)
            </dd>
            <dt class="col-sm-3 Empregador">
                @Html.DisplayNameFor(model => model.Perfil.Empregador)
            </dt>
            <dd class="col-sm-9 Empregador">
                @if (Model.Perfil.Empregador != null)
                {
                    <a class="text-decoration-none" asp-page="/Perfis/Empregadores/Detalhar" asp-route-id="@Model.Perfil.EmpregadorId" title="Detalhar Empregador" target="_blank">
                        @Html.DisplayFor(model => model.Perfil.Empregador.Nome)
                        <i class="bi bi-link-45deg"></i>
                    </a>
                }
            </dd>
        </dl>
        <div class="accordion mb-3" id="accordionDetalhes">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDetalhesTecnicos" aria-expanded="false" aria-controls="collapseDetalhesTecnicos">
                        Detalhes Técnicos
                    </button>
                </h2>
                <div id="collapseDetalhesTecnicos" class="accordion-collapse collapse" data-bs-parent="#accordionDetalhes">
                    <div class="accordion-body">
                        <dl class="row g-3">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Perfil.Id)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Perfil.Id)
                            </dd>
                            @*<dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Perfil.PartitionKey)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Perfil.PartitionKey)
                            </dd>*@
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Perfil.CreationDate)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Perfil.CreationDate)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Perfil.Version)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Perfil.Version)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Perfil.Id" />
            <button type="submit" value="Excluir" class="btn btn-danger">
                <i class="bi bi-trash"></i>
                Excluir
            </button>
        </form>
    </div>
</div>